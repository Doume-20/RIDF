{
  "Logging": {
    "LogLevel": {
      "Default": "Debug",
      "Microsoft": "None"
    },
    "Console": {
      "LogLevel": { "Default": "Error" },
      "FormatterOptions": {
        "SingleLine": true,
        "IncludeScopes": false,
        "TimestampFormat": "hh:mm:ss.fff - "
      }
    },
    "File": {
      "BasePath": "Logs",
      "FileAccessMode": "KeepOpenAndAutoFlush",
      "FileEncodingName": "utf-8",
      "DateFormat": "yyyyMMdd",
      "CounterFormat": "000",
      "MaxFileSize": 10485760,
      "IncludeScopes": true,
      "MaxQueueSize": 100,
      "LogLevel": {
        "Default": "Debug",
        "Microsoft": "None"
      },
      "TextBuilderType": "Unowhy.Sqool.LogCustomTextBuilder, sqoolcmn",
      "Files": [
        {
          "Path": "default-<date:yyyy-MM-dd>-<counter:000>.log"
        }
      ]
    }
  }
}
